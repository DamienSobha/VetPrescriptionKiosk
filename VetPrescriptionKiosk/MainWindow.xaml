<Window x:Class="VetPrescriptionKiosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:VetPrescriptionKiosk.Views"
        xmlns:vm="clr-namespace:VetPrescriptionKiosk.ViewModels"
        Title="Vet Prescription Kiosk"
        Height="600"
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="#F4F6F9">

    <Window.Resources>

        <!-- Home Screen -->
        <DataTemplate x:Key="HomeTemplate">
            <views:HomeView/>
        </DataTemplate>

        <!-- Details Screen -->
        <DataTemplate x:Key="DetailsTemplate">
            <views:DetailsView/>
        </DataTemplate>

        <!-- Output Screen -->
        <DataTemplate x:Key="OutputTemplate">
            <views:OutputView/>
        </DataTemplate>

        <!-- Payment Screen -->
        <DataTemplate x:Key="PaymentTemplate">
            <views:PaymentSuccessView/>
        </DataTemplate>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <!-- Drag Area -->
            <RowDefinition Height="*"/>
            <!-- App Content -->
        </Grid.RowDefinitions>

        <!-- Invisible Drag Bar -->
        <Border Grid.Row="0"
            Background="Transparent"
            MouseLeftButtonDown="Window_MouseLeftButtonDown"/>

        <!-- Main Content -->
        <ContentControl Grid.Row="1"
                    Content="{Binding}">
            <ContentControl.Style>
                <Style TargetType="ContentControl">

                    <Setter Property="ContentTemplate"
                        Value="{StaticResource HomeTemplate}"/>

                    <Style.Triggers>

                        <DataTrigger Binding="{Binding CurrentScreen}" Value="Details">
                            <Setter Property="ContentTemplate"
                                Value="{StaticResource DetailsTemplate}"/>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding CurrentScreen}" Value="Output">
                            <Setter Property="ContentTemplate"
                                Value="{StaticResource OutputTemplate}"/>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding CurrentScreen}" Value="PaymentSuccess">
                            <Setter Property="ContentTemplate"
                                Value="{StaticResource PaymentTemplate}"/>
                        </DataTrigger>

                    </Style.Triggers>

                </Style>
            </ContentControl.Style>
        </ContentControl>
    </Grid>

</Window>
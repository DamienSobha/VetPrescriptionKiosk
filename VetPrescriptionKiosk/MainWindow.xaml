<Window x:Class="VetPrescriptionKiosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:VetPrescriptionKiosk.Helpers"
        Title="Vet Prescription Kiosk"
        Height="800"
        Width="400"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- INPUT SECTION -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <!-- Condition -->
            <TextBlock Text="Condition" FontWeight="Bold"/>
            <ComboBox ItemsSource="{Binding DogConditions}"
                  SelectedItem="{Binding SelectedCondition}"
                  Margin="0,5,0,10"/>

            <!-- Weight -->
            <StackPanel Visibility="{Binding IsWeightRequired, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="Dog Weight (kg)" FontWeight="Bold"/>
                <TextBox Text="{Binding Weight, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5,0,10"/>
            </StackPanel>

            <!-- Age -->
            <StackPanel Visibility="{Binding IsPuppy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="Age (weeks)" FontWeight="Bold"/>
                <TextBox Text="{Binding AgeWeeks, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5,0,10"/>
            </StackPanel>

            <Button Content="Submit"
                Command="{Binding CalculateCommand}"
                Height="45"
                Margin="0,10,0,0"/>
        </StackPanel>

        <!-- RECEIPT SECTION -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="{Binding Result.TotalCost, StringFormat='Total: £{0:F2}'}"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   Visibility="{Binding Result, Converter={StaticResource NullToVisibilityConverter}}"/>

            <ListView ItemsSource="{Binding Result.Lines}"
                  Visibility="{Binding Result, Converter={StaticResource NullToVisibilityConverter}}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Item"
                                    DisplayMemberBinding="{Binding Description}" Width="150"/>
                        <GridViewColumn Header="Qty"
                                    DisplayMemberBinding="{Binding Quantity}" Width="25"/>
                        <GridViewColumn Header="Unit"
                                    DisplayMemberBinding="{Binding UnitPrice, StringFormat=£{0:F2}}" Width="70"/>
                        <GridViewColumn Header="Total"
                                    DisplayMemberBinding="{Binding LineTotal, StringFormat=£{0:F2}}" Width="70"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>

</Window>
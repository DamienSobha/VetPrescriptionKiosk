<UserControl x:Class="VetPrescriptionKiosk.Views.DetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:VetPrescriptionKiosk.Helpers">

    <UserControl.Resources>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <StackPanel>

            <!-- Page Title -->
            <TextBlock Text="Enter Your Dog's Details"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <!-- Condition -->
            <TextBlock Text="Condition"
                       FontWeight="Bold"/>
            <ComboBox ItemsSource="{Binding DogConditions}"
                      SelectedItem="{Binding SelectedCondition}"
                      Margin="0,5,0,15"
                      Height="35"/>

            <!-- Weight -->
            <StackPanel Visibility="{Binding IsWeightRequired, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="Dog Weight (kg)"
                           FontWeight="Bold"/>
                <TextBox Text="{Binding Weight, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,5,0,15"
                         Height="35"/>
            </StackPanel>

            <!-- Age -->
            <StackPanel Visibility="{Binding IsPuppy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="Age (weeks)"
                           FontWeight="Bold"/>
                <TextBox Text="{Binding AgeWeeks, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,5,0,15"
                         Height="35"/>
            </StackPanel>

            <!-- Submit Button -->
            <Button Content="Submit"
                    Command="{Binding SubmitCommand}"
                    Background="#0078D7"
                    Foreground="White"
                    Width="300"
                    BorderThickness="0">
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
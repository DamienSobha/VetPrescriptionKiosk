<UserControl x:Class="VetPrescriptionKiosk.Views.OutputView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VetPrescriptionKiosk.Views"
             xmlns:helpers="clr-namespace:VetPrescriptionKiosk.Helpers"
             mc:Ignorable="d">

    <UserControl.Resources>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <StackPanel>

            <!-- Page Title -->
            <TextBlock Text="Prescription Summary"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <!-- Error Message -->
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       FontWeight="Bold"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Margin="0,0,0,15"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"/>

            <!-- Receipt Section -->
            <StackPanel Visibility="{Binding Result, Converter={StaticResource NullToVisibilityConverter}}">

                <!-- Receipt Lines -->
                <ListView ItemsSource="{Binding Result.Lines}"
                          Margin="0,0,0,10"
                          Height="250">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Item"
                                            DisplayMemberBinding="{Binding Description}"
                                            Width="160"/>
                            <GridViewColumn Header="Qty"
                                            DisplayMemberBinding="{Binding Quantity}"
                                            Width="40"/>
                            <GridViewColumn Header="Unit"
                                            DisplayMemberBinding="{Binding UnitPrice, StringFormat=£{0:F2}}"
                                            Width="70"/>
                            <GridViewColumn Header="Total"
                                            DisplayMemberBinding="{Binding LineTotal, StringFormat=£{0:F2}}"
                                            Width="80"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Total -->
                <TextBlock Text="{Binding Result.TotalCost, StringFormat='Total: £{0:F2}'}"
                           FontSize="18"
                           FontWeight="Bold"
                           HorizontalAlignment="Right"
                           Margin="0,0,0,20"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,20,0,0">

                <Button Content="Pay"
                Command="{Binding PayCommand}"
                Background="#28A745"
                Foreground="White"
                Width="130"    
                Margin="0,20,15,0"
                Visibility="{Binding Result, Converter={StaticResource NullToVisibilityConverter}}"/>

                <Button Content="Cancel"
                Command="{Binding CancelCommand}"
                Background="#DC3545"
                Foreground="White"
                Width="130"
                Margin="15,20,0,0"/>
                
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>

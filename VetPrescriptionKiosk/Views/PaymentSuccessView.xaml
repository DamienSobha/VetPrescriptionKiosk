<UserControl x:Class="VetPrescriptionKiosk.Views.PaymentSuccessView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#F4F6F9">
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="400">

            <!-- Success Message -->
            <TextBlock Text="Payment Successful"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#28A745"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Transaction ID -->
            <TextBlock Text="{Binding Result.TransactionId, StringFormat='Order ID: {0}'}"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <!-- Print Button -->
            <Button Content="Print Receipt"
                    Command="{Binding PrintReceiptCommand}"
                    Height="50"
                    Width="300"
                    FontSize="16"
                    Background="#0078D7"
                    Foreground="White"
                    BorderThickness="0"
                    Margin="0,0,0,15"/>

            <!-- Return Home -->
            <Button Content="Finish"
                    Command="{Binding CancelCommand}"
                    Width="300"
                    FontSize="16"
                    Background="#6C757D"
                    Foreground="White"
                    BorderThickness="0"/>

        </StackPanel>
    </Grid>
</UserControl>